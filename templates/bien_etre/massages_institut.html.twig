{% extends 'base.html.twig' %}

{% block title %}Massages de l'Institut{% endblock %}

{% block body %}

    <main class="container py-3">

        <!-- Hero -->
        <section class="row py-md-5 py-3 my-md-5 text-center">
            <div class="col-12 col-md-8 offset-md-2 col-xl-6 offset-xl-3">
                <p class="green-1"><i class="fa-regular fa-fw fa-5x fa-spa"></i></p>
                <h1 class="hero-title mb-4 mb-md-3 px-1">Les Massages de l'Institut</h1>
                <p class="hero-p mb-4 mb-md-3 px-1">Nous avons créé pour vous quelques formules originales !</p>
            </div>
        </section>

        <img class="large-illustration my-5 w-shadow" src="/img/institut/cabine-massage-min.webp" alt="Une photo d'une cabine de massage à l'Institut">

        <!-- Les Produits -->
        <section class="row g-4">
            {% for p in products %}
                {% if p.category.name == "Massages de l'Institut" %}
                    <div class="col-12 col-md-6 col-lg-4 d-flex align-items-stretch">
                        {% include "partials/_card_prestation.html.twig" with { 'p': p } %}
                    </div>
                {% endif %}
            {% endfor %}
        </section>

    </main>

{% endblock %}

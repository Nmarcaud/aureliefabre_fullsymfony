{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    <main class="container py-3">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <div class="row my-5">
                <div class="col-12 col-md-6 offset-md-3">
                    <div class="card border-0 w-shadow">
                        <div class="card-body pt-5 px-5">

                            <h1 class="h3 mb-3 card-title">Connexion</h1>

                            <div class="form-group my-3">
                                <label for="inputEmail">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="form-group my-3">
                                <label for="inputPassword">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>
                            
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}

                            <div class="form-group my-3 text-end">
                                <button class="btn btn-primary" type="submit">
                                    Se connecter
                                </button>
                            </div>

                        </div>

                        <div class="card-footer px-5 py-3 bg-lg-1 border-0">
                            <div class="row">
                                <div class="col-12 my-2">
                                    <a class="blue-2" href="{{ path('app_forgot_password_request') }}">
                                        <i class="fa-regular fa-arrows-rotate fa-fw"></i> Récupérer mon mot de passe
                                    </a>
                                </div>
                                <div class="col-12 my-2">
                                    <a class="blue-2" href="{{ path('app_register') }}">
                                        <i class="fa-regular fa-square-plus fa-fw"></i> Créer mon compte
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            
            
        </form>

    </main>
    
{% endblock %}

<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}Aurélie Fabre{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        
        {% block stylesheets %}

            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

            <script src="https://kit.fontawesome.com/eb0fe598e4.js" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="/css/style.css">
            {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}

    </head>
    
    <body>

        {# Primary Nav #}
        {% include "partials/nav/_primary_navbar.html.twig" %}

        {# Secondary Nav #}
        {% if secondaryNavbar is defined %}
            {% if secondaryNavbar == 'beaute' %}
                {% include "partials/nav/_beaute_secondary_navbar.html.twig" %}
            {% endif %}
            {% if secondaryNavbar == 'bien-etre' %}
                {% include "partials/nav/_bien_etre_secondary_navbar.html.twig" %}
            {% endif %}
            {% if secondaryNavbar == 'naturopathie' %}

            {% endif %}
            {% if secondaryNavbar == 'admin' %}
                {% include "partials/nav/_admin_secondary_navbar.html.twig" %}
            {% endif %}
        {% endif %}
        

        {# Notifications #}
        {% for rubrique, messages in app.flashes %}
            <div class="alert-{{ rubrique }}">
                <div class="container py-3">
                    {% for m in messages %}
                        <p class="my-0">{{ m }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        
        

        {# Toast avec Symfony Turbo/encore... #}
        {# https://symfonycasts.com/screencast/turbo/toast #}
        {# 

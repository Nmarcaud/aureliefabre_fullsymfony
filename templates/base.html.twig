<!DOCTYPE html>
<html>
    <head>

        <meta charset="UTF-8">
        <title>{% block title %}Aurélie Fabre{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        
        {% block stylesheets %}

            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            {# <link rel="stylesheet" href="/css/style.css"> #}


            <script src="https://kit.fontawesome.com/eb0fe598e4.js" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>

            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    
   <body  {#{{ stimulus_controller('symfony/ux-swup/swup') }}#}> 

        

        {# Primary Nav #}
        {% include "partials/nav/_primary_navbar.html.twig" %}
        
        {# Secondary Nav #}
        {% if secondaryNavbar is defined %}
            {% if secondaryNavbar == 'beaute' %}
                {% include "partials/nav/_beaute_secondary_navbar.html.twig" %}
            {% endif %}
            {% if secondaryNavbar == 'bien-etre' %}
                {% include "partials/nav/_bien_etre_secondary_navbar.html.twig" %}
            {% endif %}
            {% if secondaryNavbar == 'naturopathie' %}

            {% endif %}
            {% if secondaryNavbar == 'admin' %}
                {% include "partials/nav/_admin_secondary_navbar.html.twig" %}
            {% endif %}
            {% if secondaryNavbar == 'customer' %}
                {% include "partials/nav/_customer_secondary_navbar.html.twig" %}
            {% endif %}
        {% endif %}


        <div id="app"></div>
        

        {# Toast avec Symfony Turbo/encore... #}
        {# https://symfonycasts.com/screencast/turbo/toast #}
        {% for rubrique, messages in app.flashes %}
            {{ include('partials/_toast.html.twig', {
                title: rubrique,
                messages: messages
            }) }}
        {% endfor %}

        {% include "partials/_mini_cart.html.twig" %}
        
        {% block body %}{% endblock %}
            
        {% include "partials/_footer.html.twig" %}
        

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

            {{ encore_entry_script_tags('app') }}

            <script>
                // Essai de parallax d'image 
                // https://simpleparallax.com/#example-orientation
                // const simpleParallax = require('simple-parallax-js');
                // var image = document.getElementsByClassName('large-illustration');
                // new simpleParallax(image);


                const swiper = new Swiper('.nav-swiper', {
                    // Optional parameters
                    scrollbar: {
                        el: ".swiper-scrollbar",
                        hide: true,
                    },
                    // pour bloquer un comportement suspect !
                    allowSlideNext: false,
                    allowSlidePrev: false,
                });
    
            </script>

        {% endblock %}
        
    </body>
</html>
